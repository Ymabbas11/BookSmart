<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BookSmart" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/green_500</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/mint_50</item>
        <item name="cardBackgroundColor">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/grey_900</item>
        <item name="android:textColorSecondary">@color/grey_700</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/GreenButton</item>
        <item name="materialCardViewStyle">@style/GreenCard</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GreenCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/mint_50</item>
        <item name="strokeColor">@color/green_100</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>