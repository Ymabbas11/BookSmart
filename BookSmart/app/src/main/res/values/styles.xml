<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/grey_700</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/grey_900</item>
        <item name="android:textColorSecondary">@color/grey_700</item>
    </style>

    <style name="CustomTimePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/grey_700</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/grey_900</item>
        <item name="android:textColorSecondary">@color/grey_700</item>
    </style>

    <style name="QuickBookButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/green_500</item>
    </style>
</resources> 